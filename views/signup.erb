<h1>Welcome to Brooklyn Whinery</h1>
<p>A forum for wine, whining and wastrels</p>
<%if @created%>
<p class="signup-success">New wastrel created!<br>Click below to login.<br>
<a href="/login">LOGIN</a></p>
<%else%>
<div class="signup form-wrapper">
  <form class="form" actions="/signup" method="post">
  <div class="input-row">
      <label for="name">USER NAME:</label><br>
      <input type="text" name="name" /><br>
    </div>

    <div class="input-row">
      <label for="email">EMAIL:</label><br>
      <input type="email" name="email" /><br>
    </div>

    <div class="input-row">
      <label for="password">PASSWORD:</label><br>
      <input type="password" name="password" /><br>
    </div>

    <div class="input-row">
      <input type="submit" value="Finish"><br>
    </div>

  </form>
</div>
<%end%>
